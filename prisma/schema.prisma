// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int       @id @default(autoincrement())
  name     String?
  picture  String?
  email    String    @unique
  password String
  role     Role      @default(USER)
  Product  Product[]
  Cart     Cart[]
}

enum Role {
  ADMIN
  USER
}

model Product {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  category    String
  style       String
  store       String
  size        String
  inventory   Int
  color       String
  price       Int
  images      String
  userId      Int
  User        User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  Cart        Cart[]

  @@index([userId])
}

model Cart {
  id        Int     @id @default(autoincrement())
  productId Int
  Product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId    Int
  User      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([userId])
}
